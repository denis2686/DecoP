<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".iinscriptionDeco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Vous êtes décorateur ou une Entreprise ?"
            android:textColor="#E6FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoentre"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_log"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.876"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/barre_de_saisie"
            android:hint="Nom de l'entreprise"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp"
            tools:ignore="TextFields" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/barre_de_saisie"
            android:hint="services exercer"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/barre_de_saisie"
            android:hint="Email de l'entreprise"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/barre_de_saisie"
            android:hint="Mot de passe"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/inscruption_deco"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primaryLightColor"
            android:text="S'inscrire"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="25sp" />

        <TextView
            android:id="@+id/connexdeco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="Se connecter"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>