<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".sup_compte">

    <LinearLayout
        android:layout_width="429dp"
        android:layout_height="104dp"
        android:layout_marginTop="1dp"
        android:background="@color/primaryColor"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="97dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/deco"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/connexion"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-45dp"
            android:background="@mipmap/icon_account"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/barre"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/backb"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            app:srcCompat="@mipmap/icon_home" />

        <ImageView
            android:id="@+id/serv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            app:srcCompat="@mipmap/icon_service" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            app:srcCompat="@mipmap/ic_mess" />

        <ImageView
            android:id="@+id/recherche"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            app:srcCompat="@mipmap/icon_search" />

        <ImageView
            android:id="@+id/parametre"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            app:srcCompat="@mipmap/icon_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="423dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:text="Supprimer votre compte"
            android:textColor="#E6FFFFFF"
            android:textSize="29sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/barre_de_saisie"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/barre_de_saisie"
            android:hint="Mot de passe"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/conexiondeco"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/primaryLightColor"
            android:text="Supprimer"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="22sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>