<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/primaryColor"
    android:layout_height="match_parent"
    tools:context=".message">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp"
        android:background="@color/secondaryDarkColor"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@mipmap/salle2"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_400sdp"
            android:background="@drawable/saisie_message"
            android:gravity="center"
            android:hint="Message"
            android:inputType="textEmailAddress"
            android:textColor="#AAA7A7"
            android:textColorHint="@color/primaryTextColor"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginStart="@dimen/_215sdp"
            android:layout_marginTop="-55dp"
            android:background="@mipmap/sms_sent"
            android:contentDescription="TODO" />
    </LinearLayout>

</FrameLayout>