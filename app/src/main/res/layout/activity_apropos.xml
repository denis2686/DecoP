<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".apropos">

    <TextView
        android:id="@+id/decop"
        android:layout_width="97dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:text="Deco+"
        android:textColor="@color/primaryTextColor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="A-propos"
        android:textColor="@color/primaryTextColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="525dp"
        android:layout_marginTop="140dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="349dp"
            android:layout_height="397dp"
            android:layout_gravity="center"
            android:text="      Deco+ est une application qui aide aux personnes ou entreprise exerçant les activités: (Décoration, Service Traiteur, Location, Animation) de poster leurs expériences sur l’application (photo, vidéo).
\n\n    Cette application est mise en œuvre par un groupe d’étudiant de l’université de Lubumbashi en RDC. Qui sont :
\n\n1.NGOY ILUNGA Denis
\n2.ILUNGA TSHIKENGELA Syllia
\n3.MUKANDU NGONGO Dorcas
\n4.MWANAILUNGA LUMBU Isidore"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Contacter les développeurs, en cliquant "
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"
            android:textStyle="italic" />
        <Button
            android:id="@+id/devcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ici"
            android:textColor="@color/primaryTextColor"
            android:background="@color/primaryLightColor"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>